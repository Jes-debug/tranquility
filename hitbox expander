while true do wait(1) getgenv().HeadSize = 15 getgenv().Disabled = true
 
        if getgenv().Disabled then
            for i, v in next, game:GetService("Players"):GetPlayers() do
                if v.Name ~= game:GetService("Players").LocalPlayer.Name then
                    pcall(
                        function()
                            v.Character.HumanoidRootPart.Name = "TRANQUILITYzONzTOP"
                            v.Character.TRANQUILITYzONzTOP.Size =
                                Vector3.new(getgenv().HeadSize, getgenv().HeadSize, getgenv().HeadSize)
                            v.Character.TRANQUILITYzONzTOP.Transparency = 0.5
                            v.Character.TRANQUILITYzONzTOP.CanCollide = false
                            v.Character.TRANQUILITYzONzTOP.Color = Color3.fromRGB(0, 0, 0)
                        end
                    )
                end
            end
        end
    end
